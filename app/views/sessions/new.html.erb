<h1>login</h1>

<%= form_for(:session, url: login_path) do |f| %>
	<%= f.label 					:email %>
	<%= f.email_field 		:email %>

	<%= f.label 					:password %>
	<%= f.password_field 	:password %>

	<%= f.label 					:remember_me %>
	<%= f.check_box 			:remember_me do %>
		<span>Remember me on this computer</span>
	<% end %>

	<%= f.submit "login" %>

<% end %>