<h1>welcome</h1>

<% if @user.errors.any? %>
	<ul>
	<% @user.errors.full_messages.each do |error| %>
		<li><%= error %></li>
	<% end %>
	</ul>
<% end %>

<h2> log in </h2>
<%= form_for @user do |f| %>

	<%= f.label						:email %>
	<%= f.email_field 		:email %>

	<%= f.label						:password %>
	<%= f.password_field 	:password %>


	<%= f.submit "log in" %>

<% end %>